<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_ffffff_10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:text="Cut The Rope:"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/tag"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tag"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:src="@drawable/tag"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/native_title"
                app:layout_constraintRight_toLeftOf="@id/native_action"
                app:layout_constraintBottom_toBottomOf="@id/native_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#80333333"
                android:text="Cut The Rope:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintTop_toBottomOf="@id/native_title"
                app:layout_constraintRight_toLeftOf="@id/native_action"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_action"
                android:layout_width="77dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="Install"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_ff7f00_18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ad_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ad_cover2"/>
</RelativeLayout>